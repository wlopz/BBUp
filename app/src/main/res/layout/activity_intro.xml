<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bootstrap="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#ff0a393d">

    <TextView android:text="Bienvenidos a Bun Bun Up!" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:id="@+id/textView2"
        android:layout_marginTop="116dp"
        android:textIsSelectable="true"
        android:textColor="#ffffffff"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        bootstrap:bb_icon_right="fa-arrow-right"
        bootstrap:bb_type="success"
        android:text="@string/btnText"
        android:id="@+id/button"
        android:onClick="startMenuActivity"
        android:layout_marginBottom="52dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Somos Comercializadores de Ropa y Productos Colombianos en Atlanta"
        android:id="@+id/textView"
        android:layout_alignWithParentIfMissing="false"
        android:textAlignment="center"
        android:layout_above="@+id/button"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="77dp"
        android:textColor="#ffffffff"
        android:textIsSelectable="false" />

</RelativeLayout>